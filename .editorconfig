# EditorConfig: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.in,*.out}]
insert_final_newline = false
trim_trailing_whitespace = false

[*.cpp]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
